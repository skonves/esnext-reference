{
  "name": "esnext-reference",
  "version": "1.0.0",
  "description": "Reference projects for ES6/7 code",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./src ./tests",
    "lintfix": "eslint --fix ./src ./tests",
    "recompile": "npm run clean && npm run compile",
    "clean": "rm -rf .compiled && mkdir -p .compiled/src && mkdir -p .compiled/tests",
    "compile": "babel src --out-dir .compiled/src && babel tests --out-dir .compiled/tests",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov mocha tests"
  },
  "author": "Steve Konves",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.0",
	"babel-plugin-istanbul": "^4.1.3",
    "babel-plugin-transform-es2015-destructuring": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
	"babel-register": "^6.24.1",
    "chai": "^3.5.0",
	"cross-env": "^4.0.0",
    "eslint": "^3.9.1",
    "eslint-plugin-babel": "^3.3.0",
    "mocha": "^3.2.0",
	"nyc": "^10.3.0",
    "source-map-support": "^0.4.11"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
	"include": "src",
	"exclude": "tests",
    "sourceMap": false,
    "instrument": false
  }
}
